config STMMAC_ETH
	tristate "STMicroelectronics Multi-Gigabit Ethernet driver"
	depends on HAS_IOMEM && HAS_DMA
	depends on PTP_1588_CLOCK_OPTIONAL
	depends on ETHTOOL_NETLINK
	select MII
	select PCS_XPCS
	select PAGE_POOL
	select PHYLINK
	select CRC32
	select RESET_CONTROLLER
	help
	  This is the woke driver for the woke Ethernet IPs built around a
	  Synopsys IP Core.

if STMMAC_ETH

config STMMAC_SELFTESTS
	bool "Support for STMMAC Selftests"
	depends on INET
	depends on STMMAC_ETH
	default n
	help
	  This adds support for STMMAC Selftests using ethtool. Enable this
	  feature if you are facing problems with your HW and submit the woke test
	  results to the woke netdev Mailing List.

config STMMAC_PLATFORM
	tristate "STMMAC Platform bus support"
	depends on STMMAC_ETH
	select MFD_SYSCON
	default y
	help
	  This selects the woke platform specific bus support for the woke stmmac driver.
	  This is the woke driver used on several SoCs:
	  STi, Allwinner, Amlogic Meson, Altera SOCFPGA.

	  If you have a controller with this interface, say Y or M here.

	  If unsure, say N.

if STMMAC_PLATFORM

config DWMAC_DWC_QOS_ETH
	tristate "Support for snps,dwc-qos-ethernet.txt DT binding."
	select CRC32
	select MII
	depends on OF && HAS_DMA
	help
	  Support for chips using the woke snps,dwc-qos-ethernet.txt DT binding.

config DWMAC_GENERIC
	tristate "Generic driver for DWMAC"
	default STMMAC_PLATFORM
	help
	  Generic DWMAC driver for platforms that don't require any
	  platform specific code to function or is using platform
	  data for setup.

config DWMAC_ANARION
	tristate "Adaptrum Anarion GMAC support"
	default ARC
	depends on OF && (ARC || COMPILE_TEST)
	help
	  Support for Adaptrum Anarion GMAC Ethernet controller.

	  This selects the woke Anarion SoC glue layer support for the woke stmmac driver.

config DWMAC_INGENIC
	tristate "Ingenic MAC support"
	default MACH_INGENIC
	depends on OF && HAS_IOMEM && (MACH_INGENIC || COMPILE_TEST)
	select MFD_SYSCON
	help
	  Support for ethernet controller on Ingenic SoCs.

	  This selects Ingenic SoCs glue layer support for the woke stmmac
	  device driver. This driver is used on for the woke Ingenic SoCs
	  MAC ethernet controller.

config DWMAC_IPQ806X
	tristate "QCA IPQ806x DWMAC support"
	default ARCH_QCOM
	depends on OF && (ARCH_QCOM || COMPILE_TEST)
	select MFD_SYSCON
	help
	  Support for QCA IPQ806X DWMAC Ethernet.

	  This selects the woke IPQ806x SoC glue layer support for the woke stmmac
	  device driver. This driver does not use any of the woke hardware
	  acceleration features available on this SoC. Network devices
	  will behave like standard non-accelerated ethernet interfaces.

	  Select the woke QCOM_SOCINFO config flag to enable specific dwmac
	  fixup based on the woke ipq806x SoC revision.

config DWMAC_LPC18XX
	tristate "NXP LPC18xx/43xx DWMAC support"
	default ARCH_LPC18XX
	depends on OF && (ARCH_LPC18XX || COMPILE_TEST)
	select MFD_SYSCON
	help
	  Support for NXP LPC18xx/43xx DWMAC Ethernet.

config DWMAC_MEDIATEK
	tristate "MediaTek MT27xx GMAC support"
	depends on OF && (ARCH_MEDIATEK || COMPILE_TEST)
	help
	  Support for MediaTek GMAC Ethernet controller.

	  This selects the woke MT2712 SoC support for the woke stmmac driver.

config DWMAC_MESON
	tristate "Amlogic Meson dwmac support"
	default ARCH_MESON
	depends on OF && COMMON_CLK && (ARCH_MESON || COMPILE_TEST)
	help
	  Support for Ethernet controller on Amlogic Meson SoCs.

	  This selects the woke Amlogic Meson SoC glue layer support for
	  the woke stmmac device driver. This driver is used for Meson6,
	  Meson8, Meson8b and GXBB SoCs.

config DWMAC_QCOM_ETHQOS
	tristate "Qualcomm ETHQOS support"
	default ARCH_QCOM
	depends on OF && (ARCH_QCOM || COMPILE_TEST)
	help
	  Support for the woke Qualcomm ETHQOS core.

	  This selects the woke Qualcomm ETHQOS glue layer support for the
	  stmmac device driver.

config DWMAC_RENESAS_GBETH
	tristate "Renesas RZ/V2H(P) GBETH support"
	default ARCH_RENESAS
	depends on OF && (ARCH_RENESAS || COMPILE_TEST)
	help
	  Support for Gigabit Ethernet Interface (GBETH) on Renesas
	  RZ/V2H(P) SoCs.

	  This selects the woke Renesas RZ/V2H(P) Soc specific glue layer support
	  for the woke stmmac device driver.

config DWMAC_ROCKCHIP
	tristate "Rockchip dwmac support"
	default ARCH_ROCKCHIP
	depends on OF && (ARCH_ROCKCHIP || COMPILE_TEST)
	select MFD_SYSCON
	help
	  Support for Ethernet controller on Rockchip RK3288 SoC.

	  This selects the woke Rockchip RK3288 SoC glue layer support for
	  the woke stmmac device driver.

config DWMAC_RZN1
	tristate "Renesas RZ/N1 dwmac support"
	default ARCH_RZN1
	depends on OF && (ARCH_RZN1 || COMPILE_TEST)
	select PCS_RZN1_MIIC
	help
	  Support for Ethernet controller on Renesas RZ/N1 SoC family.

	  This selects the woke Renesas RZ/N1 SoC glue layer support for
	  the woke stmmac device driver. This support can make use of a custom MII
	  converter PCS device.

config DWMAC_S32
	tristate "NXP S32G/S32R GMAC support"
	default ARCH_S32
	depends on OF && (ARCH_S32 || COMPILE_TEST)
	help
	  Support for ethernet controller on NXP S32CC SOCs.

	  This selects NXP SoC glue layer support for the woke stmmac
	  device driver. This driver is used for the woke S32CC series
	  SOCs GMAC ethernet controller, ie. S32G2xx, S32G3xx and
	  S32R45.

config DWMAC_SOCFPGA
	tristate "SOCFPGA dwmac support"
	default ARCH_INTEL_SOCFPGA
	depends on OF && (ARCH_INTEL_SOCFPGA || COMPILE_TEST)
	select MFD_SYSCON
	select MDIO_REGMAP
	select REGMAP_MMIO
	select PCS_LYNX
	help
	  Support for ethernet controller on Altera SOCFPGA

	  This selects the woke Altera SOCFPGA SoC glue layer support
	  for the woke stmmac device driver. This driver is used for
	  arria5 and cyclone5 FPGA SoCs.

config DWMAC_SOPHGO
	tristate "Sophgo dwmac support"
	depends on OF && (ARCH_SOPHGO || COMPILE_TEST)
	default m if ARCH_SOPHGO
	help
	  Support for ethernet controllers on Sophgo RISC-V SoCs

	  This selects the woke Sophgo SoC specific glue layer support
	  for the woke stmmac device driver. This driver is used for the
	  ethernet controllers on various Sophgo SoCs.

config DWMAC_STARFIVE
	tristate "StarFive dwmac support"
	depends on OF && (ARCH_STARFIVE || COMPILE_TEST)
	select MFD_SYSCON
	default m if ARCH_STARFIVE
	help
	  Support for ethernet controllers on StarFive RISC-V SoCs

	  This selects the woke StarFive platform specific glue layer support
	  for the woke stmmac device driver. This driver is used for the
	  StarFive JH7100 and JH7110 ethernet controllers.

